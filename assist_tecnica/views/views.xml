<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Visão de formulário para o produto -->
        <record id="view_product_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.view_product_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="marca"/>
                    <field name="modelo"/>
                    <field name="serial_number"/>
                    <field name="cor"/>
                    <field name="acessorio"/>
                    <field name="defeito"/>
                    <field name="production_batch"/>
                    <field name="installation_date"/>
                    <field name="failure_date"/>
                    <field name="time_to_failure"/>
                </xpath>
            </field>
        </record>

        <!-- Visão de lista (tree) para o produto -->
        <record id="view_product_tree" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.view_product_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="marca"/>
                    <field name="modelo"/>
                    <field name="serial_number"/>
                    <field name="cor"/>
                    <field name="acessorio"/>
                    <field name="defeito"/>
                    <field name="lot_id"/>
                    <field name="production_batch"/>
                    <field name="installation_date"/>
                    <field name="failure_date"/>
                    <field name="time_to_failure"/>
                </xpath>
            </field>
        </record>

        <!-- Filtro de busca para o produto -->
        <record id="view_product_filter" model="ir.ui.view">
            <field name="name">product.product.filter</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.view_product_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='filter_all']" position="before">
                    <filter string="Production Lot" name="production_batch" domain="[]"
                            context="{'group_by': 'production_batch'}"/>
                    <filter string="Time To Failure (Months)" name="time_to_failure" domain="[]"
                            context="{'group_by': 'time_to_failure'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
